@model WebApplication1.Models.DomingoAdminDashboardViewModel

@{
    ViewBag.RefreshPage = "Refresh every 1 min";
}

@Html.Partial("_HomepageCarousel")

<div class="headline">
    <h1>Admin Dashboard</h1>  
</div>
<div class="margin-bottom-20"></div>

@if ((ApplicationUserManager.GetUserType(User.Identity.Name) == "admin")
    || (ApplicationUserManager.GetUserType(User.Identity.Name) == "traveloger"))
{
    <div class="row servive-block margin-bottom-10">

        <div class="col-md-3 col-sm-6">
            <div class="servive-block-in servive-block-colored servive-block-orange">
                <h4>Manage Trips</h4>
                <div class="margin-bottom-20"></div>
                <a href="/Admin/Trips" class="white"> <div><i class="icon-briefcase"></i></div></a>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="servive-block-in servive-block-colored servive-block-grey">
                <h4>Hotel Bookings</h4>
                <div class="margin-bottom-20"></div>
                <a href="/Admin/TripBookingAccommodations" class="white"> <div><i class="icon-building"></i></div></a>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="servive-block-in servive-block-colored servive-block-yellow">
                <h4>Transfer Bookings</h4>
                <div class="margin-bottom-20"></div>
                <a href="/Admin/TripBookingTransports" class="white"> <div><i class="icon-plane"></i></div></a>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="servive-block-in servive-block-colored servive-block-orange">
                <h4>Messages</h4>
                <div class="margin-bottom-20"></div>
                <a href="/Admin/MessageCenter" class="white"> <div><i class="icon-envelope"></i></div></a>
            </div>
        </div>

    </div>
}



@if ((ApplicationUserManager.GetUserType(User.Identity.Name) == "admin")
    || (ApplicationUserManager.GetUserType(User.Identity.Name) == "editor"))
{
    <div class="row servive-block margin-bottom-10">

        <div class="col-md-3 col-sm-6">
            <div class="servive-block-in servive-block-colored servive-block-orange">
                <h4>Destinations</h4>
                <div class="margin-bottom-20"></div>
                <a href="/Admin/Destinations" class="white"> <div><i class="icon-road"></i></div></a>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="servive-block-in servive-block-colored servive-block-yellow">
                <h4>Trip Templates</h4>
                <div class="margin-bottom-20"></div>
                <a href="/Admin/TripTemplates" class="white"> <div><i class="icon-cogs"></i></div></a>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="servive-block-in servive-block-colored servive-block-orange">
                <h4>Trip Providers</h4>
                <div class="margin-bottom-20"></div>
                <a href="/Admin/Tripproviders" class="white"> <div><i class="icon-cogs"></i></div></a>
            </div>
        </div>

    </div>
}

