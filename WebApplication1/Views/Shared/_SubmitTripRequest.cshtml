@model  WebApplication1.Models._SubmitTripRequestViewModel

<div class="row">

    <div class="col-md-12 col-sm-6">

        <div class="block-heading-two">
            <h3><span>You can also send your queries to our team</span></h3>
            <h6 class="color">We will contact you as soon possible and discuss your @Model.CircuitName travel plans.</h6>
        </div>

        <!-- Appointment content -->
        <form class="form" id="form1" name="form1" role="form" action="https://travelogyadmin.wufoo.com/forms/z1hu3bu21fh65e3/#public" method="post"
              accept-charset="UTF-8" autocomplete="off" enctype="multipart/form-data">
            <!--<input type="hidden" name="FORM_ID" value="bc313251-2d8c-495f-ae19-4befcca7896e">
            <input type="hidden" name="COMPLETE_URL" value="http://travelogyclub.com/v2/formsubmitted.html">-->
            <input type="hidden" name="Field9" value="@Model.CircuitName" />
            <input type="hidden" id="idstamp" name="idstamp" value="UM/i5yyERB+UWFQXc6pI54V6xc1iORz8HPxsKOTFbp8=" />

            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        <input class="form-control" type="text" id="Field1" name="Field1" placeholder="First Name (required)" required>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        <input class="form-control" type="text" id="Field2" name="Field2" placeholder="Last Name (required)" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        <input class="form-control" type="email" id="Field3" name="Field3" placeholder="Email (required)" required>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        <input class="form-control" type="text" id="Field4" name="Field4" placeholder="Phone number (Optional)">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <textarea class="form-control" id="Field13" name="Field13"
                                  rows="3" placeholder="Write more about your enquiry. If you wish to visit somewhere which has not been listed above, do not hesitate to write that to us. Your wish is our command."></textarea>
                    </div>
                    <div class="form-group">
                        <label for="chkBoxIAgree"><strong>Please confirm that you have read and agree to our <a href="Terms-and-Conditions.html" target="_blank">Terms and Conditions</a></strong>&nbsp;&nbsp;</label>
                        <input type="checkbox" id="Field15" name="Field15" required />
                    </div>
                    <button type="submit" class="btn btn-color">Send your query</button>
                    <br />
                </div>
            </div>
        </form>
    </div>
</div>
