@model DomingoDAL.Destination

<!--Destination-->
<div class="row blog blog-medium margin-bottom-40">
    <div class="col-md-12">
        <h2>@Model.Name - <small>@Model.Tagline</small></h2>
    </div>
    <div class="col-md-3 smart-container">
        <img class="img-responsive" src="@Model.ThumbnailPath" alt="">
    </div>
    <div class="col-md-6">        
        
        <p>@Model.Description</p>
        <p>
            @if (Request.IsAuthenticated)
            {
                <a class="btn-u btn-u-small" href="/service/ListAllTripTemplates?templateAlias=@Model.TemplateSearchAlias"><i class="icon-location-arrow"></i>&nbsp; Create a Trip plan</a>
            }
            else
            {
                <a class="btn-u btn-u-small" href="/account/register"><i class="icon-location-arrow"></i>&nbsp; Join and Create Trip plan</a>
            }
            <a class="btn-u btn-u-small" href="@Model.CircuitUrl"><i class="icon-location-arrow"></i>&nbsp; Explore</a>
        </p>
    </div>
    <div class="col-md-3">
        <ul class="list-unstyled list-inline blog-info">
            <li><i class="icon-calendar"></i> @Model.BestTimeToVisit</li>
            <li><i class="icon-tags"></i> @Model.TravelStyles</li>
        </ul>
    </div>
</div>
<!--Destination--> 
