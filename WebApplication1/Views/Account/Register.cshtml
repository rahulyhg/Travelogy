@model WebApplication1.Models.RegisterViewModel
@{
    ViewBag.Title = "Join the club";
}

<div class="col-lg-8 col-lg-offset-2">
    <!--Tag Box v5-->
    <div class="row text-center">
        <div class="col-md-12 margin-bottom-20">
            <h6 class="text-center">
                Welcome to the all new Travelogy club portal. Create a FREE account to use our Trip Planner and other features.
            </h6>
            <h5>
                If you have already registered, click here to
                <a href="/Account/Login" class="orange">Log in <i class="icon-signin"></i> </a>
            </h5>
            <div class="margin-bottom-20"></div>
            <h6 class="orange"> <i>Signing up and using the Trip Planner is FREE and does not need your Credit Card details!</i> </h6>
        </div>
    </div>
    <!--End Tag Box v5-->
</div>

<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="reg-header">
                <h2 class="color">@ViewBag.Title. <span class="small">Create a FREE account</span> </h2>
            </div>
            
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="icon-user"></i></span>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })                
            </div>

            <label>Only strong passwords are allowed. Create a new Password at least 6 characters long, which contains : </label>
            <ul>
                <li>One Capital Letter</li>
                <li>One Number</li>
                <li>One special character</li>
            </ul>
            <label>Your password will not be accepted if it seems weak.</label>
            <label class="orange">Example of a strong password: <strong>Travelogy12$</strong></label>
            <br />
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="icon-lock"></i></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>

            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="icon-lock"></i></span>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="danger">@Html.ValidationSummary()</p>
                </div>
            </div>

            <div class="row margin-bottom-20">
                <div class="col-md-12">
                    <input type="submit" value="Register" class="btn-u pull-right" />
                </div>
            </div> 
            
            <div class="row">
                <div class="col-md-12">
                    <h6>
                        By Joining the club you agree to our <a href="/Information/TermsAndConditions" target="_blank" class="orange">Terms And Conditions</a>.
                        We keep your data safe, please read our <a href="/Information/Privacy" target="_blank" class="orange">Privacy policy</a>.
                    </h6>
                </div>
            </div>                     
            
        }

        </div>

    @*<div class="col-md-4">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new WebApplication1.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>*@
</div>



