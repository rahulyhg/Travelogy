@model DomingoDAL.Destination

@if(Model != null)
{   
    <!--Destination-->
    <div class="col-md-6 col-sm-12">
        <div class="thumbnails thumbnail-style">
            <div class="caption">
                <h3 class="orange"><a class="hover-effect" href="@Model.CircuitUrl">@Model.Name</a></h3>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <a class="hover-effect" href="@Model.CircuitUrl"><img class="img-responsive img-border" src="@Model.ThumbnailPath" alt="" /></a>
                </div>
                <div class="col-md-6 col-sm-12">
                    <h5>@Model.Tagline</h5>
                    <div class="margin-bottom-10"></div>
                    <p><i class="icon-calendar"></i> Ideal for: @Model.BestTimeToVisit</p>
                    <p><i class="icon-tags"></i> Suitable for: @Model.TravelStyles</p>
                    <div class="margin-bottom-10"></div>
                    <a class="hover-effect" href="@Model.CircuitUrl"><h6 class="orange">View details</h6></a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="caption">
                        <div class="margin-bottom-20"></div>
                        @if (Model.Description.Length > 300)
                        {
                            var desc = Model.Description.Substring(0, 300) + "...";
                            <p>@desc</p>
                        }
                        else
                        {
                            <p>@Model.Description</p>
                        }

                        <div class="margin-bottom-20"></div>

                        @if (Request.IsAuthenticated)
                        {
                            <p class="orange">Browse all the trip ideas for @Model.Name and start planning for a custom trip.</p>
                            <div class="margin-bottom-10"></div>
                            <a class="btn-u btn-u-small" href="/service/ListAllTripTemplates?templateAlias=@Model.TemplateSearchAlias">&nbsp; Plan a trip &nbsp;&nbsp;<i class="icon-arrow-right"></i></a>
                            <div class="margin-bottom-10"></div>
                        }
                        else
                        {
                            <h6>Join for FREE to start planning trips, use the Trip planner to create and manage custom itineraries.</h6>
                            <div class="margin-bottom-10"></div>
                            <a class="btn-u btn-u-small" href="/account/Membership">&nbsp; Join the club &nbsp;&nbsp;<i class="icon-arrow-right"></i></a>
                            <div class="margin-bottom-10"></div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Destination-->   
}


