@model WebApplication1.Models.DomingoModelBase

@*@Html.Partial("_AsiaCircuitsCarousel")*@

<div class="container">
    <div class="blog-img">
        <img class="img-responsive img-border" src="~/content/img/Mongolia/slider001.jpg" alt="">
    </div>
</div>

@Html.Partial("_DestinationViewHeader", Model)

<div class="img-box-3 text-center">
    <div class="row">
        <h1 class="text-center">Travelogy club services for Mongolia tours</h1><br />
    </div>
    <div class="row">
        <!--Item-1-->
        <div class="col-md-3 col-sm-6">
            <!-- Image Box #3 Item -->
            <div class="img-box-3-item">
                <div class="img-box-3-icon">
                    <img src="~/content/img/flat-icons/18.png" alt="" class="img-responsive" />
                </div>
                <h4>Planning</h4>
                <div class="bor bg-orange"></div>
                <h3><small>Use out expert team to create the best trip plan for your Mongolian adventures.</small></h3>
            </div>
        </div>

        <!--Item-2-->
        <div class="col-md-3 col-sm-6">
            <!-- Image Box #3 Item -->
            <div class="img-box-3-item">
                <div class="img-box-3-icon">
                    <img src="~/content/img/flat-icons/passport.png" alt="" class="img-responsive" />
                </div>
                <h4>Visas</h4>
                <div class="bor bg-orange"></div>
                <h3><small>Travelogy club will take care of the travel documents you will need for the trip.</small></h3>
            </div>
        </div>

        <!--Item-3-->
        <div class="col-md-3 col-sm-6">
            <!-- Image Box #3 Item -->
            <div class="img-box-3-item">
                <div class="img-box-3-icon">
                    <img src="~/content/img/flat-icons/airplane.png" alt="" class="img-responsive" />
                </div>
                <h4>Booking</h4>
                <div class="bor bg-orange"></div>
                <h3><small>We use our trusted partners on ground to book the train + air tickets and accomodations.</small></h3>
            </div>
        </div>

        <!--Item-4-->
        <div class="col-md-3 col-sm-6">
            <!-- Image Box #3 Item -->
            <div class="img-box-3-item">
                <div class="img-box-3-icon">
                    <img src="~/content/img/flat-icons/chatting-2.png" alt="" class="img-responsive" />
                </div>
                <h4>Support</h4>
                <div class="bor bg-orange"></div>
                <h3><small>Stay in touch with our global contact center and the regional partner through the trip.</small></h3>
            </div>
        </div>
    </div>

    <div class="row">

        <!--Item-6-->
        <div class="col-md-3 col-sm-6">
            <!-- Image Box #3 Item -->
            <div class="img-box-3-item">
                <div class="img-box-3-icon">
                    <img src="~/content/img/flat-icons/bed-1.png" alt="" class="img-responsive" />
                </div>
                <h4>Accommodation</h4>
                <div class="bor bg-orange"></div>
                <h3><small>Find exciting accommodation ranging from bunk beds to luxury hotels in the city to the traditional nomadic tents in the wild.</small></h3>
            </div>
        </div>

        <!--Item-7-->
        <div class="col-md-3 col-sm-6">
            <!-- Image Box #3 Item -->
            <div class="img-box-3-item">
                <div class="img-box-3-icon">
                    <img src="~/content/img/flat-icons/desert-1.png" alt="" class="img-responsive" />
                </div>
                <h4>Excursions</h4>
                <div class="bor bg-orange"></div>
                <h3><small>We arrange various excursions around Mongolia, Explore amazing landscapes from the Gobi Desert to Altai Mountains.</small></h3>
            </div>
        </div>

        <!--Item-5-->
        <div class="col-md-3 col-sm-6">
            <!-- Image Box #3 Item -->
            <div class="img-box-3-item">
                <div class="img-box-3-icon">
                    <img src="~/content/img/flat-icons/desert.png" alt="" class="img-responsive" />
                </div>
                <h4>Adventure</h4>
                <div class="bor bg-orange"></div>
                <h3><small>Mongolia has adventure in every corner, ride a Camel across the sand dunes, or go horse-riding in the vast meadows.</small></h3>
            </div>
        </div>

        <!--Item-5-->
        <div class="col-md-3 col-sm-6">
            <!-- Image Box #3 Item -->
            <div class="img-box-3-item">
                <div class="img-box-3-icon">
                    <img src="~/content/img/flat-icons/jeep.png" alt="" class="img-responsive" />
                </div>
                <h4>Local Transport</h4>
                <div class="bor bg-orange"></div>
                <h3><small>We can pre-arrange local transport, typically a 4x4 suitable for off-roading, or you can always ask our contact center to arrange it on-demand.</small></h3>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="block-heading-twelve">
            <a href="/service/ListAllTripTemplates?templateAlias=@Model.Destination.TemplateSearchAlias">
                <h1>Check all @Model.Destination.Name trip ideas!</h1>
            </a>
        </div>
    </div>
</div>

<hr class="margin-bottom-40" />
<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            @if (Request.IsAuthenticated)
            {
                if (Model != null && Model.Destination != null)
                {
                    var _model = new WebApplication1.Models._StartTripPlanningViewModel() { CircuitName = Model.Destination.Name, TemplateAlias = Model.Destination.TemplateSearchAlias };
                    @Html.Partial("_StartTripPlanning", _model)
                }
            }

            else
            {
                @Html.Partial("_JoinNowTripPlanning")
            }
        </div>
        <div class="col-md-6 col-sm-6">
            @if (Request.IsAuthenticated)
            {
                if (Model != null && Model.Destination != null)
                {
                    var _model = new WebApplication1.Models._DownloadBrochureModel() { CircuitName = Model.Destination.Name };
                    @Html.Partial("_DownloadBrochure", _model)
                }
            }
            else
            {
                if (Model != null && Model.Destination != null)
                {
                    @Html.Partial("_SubmitTripRequest", new WebApplication1.Models._SubmitTripRequestViewModel() { CircuitName = Model.Destination.Name });
                }
            }
        </div>
    </div>
</div>




